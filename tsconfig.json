{
  "extends": "@tsconfig/node14/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2020",
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "src/test", "dist"]
}
