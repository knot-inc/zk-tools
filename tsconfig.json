{
  "extends": "@tsconfig/node14/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "noImplicitAny": false,
    "outDir": "./lib",
    "skipLibCheck": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/test", "lib"]
}
